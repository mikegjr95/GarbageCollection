        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Balance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuspendedStart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuspendedEnd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PickupConfirmation)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Customers", new { id = item.Id }, null) |
            @Html.ActionLink("Details", "Details", "Customers", new { id=item.Id }, null) |
            @Html.ActionLink("Delete", "Delete","Customers", new { id=item.Id } , null)
        </td>
    </tr>
}

</table>
